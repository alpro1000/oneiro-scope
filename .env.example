# OneiroScope Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# LLM PROVIDERS (configure at least one)
# =============================================================================
# System tries providers in order of cost (cheapest first)
# You can configure multiple providers for automatic fallback

# Groq - FREE tier, very fast, recommended for development!
# Sign up: https://console.groq.com/
GROQ_API_KEY=

# Google Gemini - $0.075 per 1M tokens (CHEAPEST paid option!)
# Sign up: https://aistudio.google.com/
GEMINI_API_KEY=

# Together AI - $0.20 per 1M tokens
# Sign up: https://api.together.xyz/
TOGETHER_API_KEY=

# OpenAI - GPT-4o-mini: $0.15 per 1M tokens
# Sign up: https://platform.openai.com/
OPENAI_API_KEY=

# Anthropic - Claude Haiku: $0.25 per 1M tokens
# Sign up: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# =============================================================================
# DATABASE
# =============================================================================
# Development (SQLite)
DATABASE_URL=sqlite+aiosqlite:///./oneiroscope.db
DATABASE_URL_SYNC=sqlite:///./oneiroscope.db

# Production (PostgreSQL) - uncomment and configure for production
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/oneiroscope
# DATABASE_URL_SYNC=postgresql://user:password@localhost:5432/oneiroscope

# =============================================================================
# REDIS (optional, for caching)
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# SECURITY
# =============================================================================
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# CORS
# =============================================================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# =============================================================================
# PAYMENT PROVIDERS (optional)
# =============================================================================
# Stripe
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# YooKassa (Russian payment provider)
YOOKASSA_SHOP_ID=
YOOKASSA_SECRET_KEY=

# =============================================================================
# MONITORING (optional)
# =============================================================================
SENTRY_DSN=
PROMETHEUS_ENABLED=true

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_PER_USER=10
RATE_LIMIT_GLOBAL=1000
